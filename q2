#include <iostream>
using namespace std;

class Complex {
    private:
    double real;
    double imag;
    
    public:
    Complex() : real(0),imag(0){}
    Complex(double r) : real(r),imag(0){}
    Complex(double r , double i) : real(r),imag(i){}
      void display() const{
          if (imag>=0)
          cout << real << "+" << imag << "i" << endl;
          else
          cout << real << "-" << imag << "i" << endl;
      
      }
    };

int main(){
    double r,i;
    Complex c1;
    cout << " Enter the real part of second complex number \n";
    cin >> r;
    Complex c2(r);
    cout << " Enter the real and imaginary parts of third complex number\n";
    cin >> r >> i;
    Complex c3(r,i);
    cout << "\n Complex number c1(default): ";
    c1.display();
    cout << "\n Complex number c2(only real part): ";
    c2.display();
    cout << "\n Complex number c3(real and imaginary part): ";
    c3.display();
    
    
    
    return 0;
    
}
